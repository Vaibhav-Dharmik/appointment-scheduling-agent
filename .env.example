# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4.1-mini
OPENAI_API_KEY=your_openai_api_key_here

# Use mock LLM when OpenAI quota is exceeded (values: true | false)
USE_MOCK_LLM=true

# Use mock embeddings when OpenAI quota is exceeded (values: true | false)
USE_MOCK_EMBEDDINGS=true

# Calendly (mock or real)
USE_MOCK_CALENDLY=true
CALENDLY_API_KEY=your_calendly_key
CALENDLY_USER_URL=https://calendly.com/your-username

# Vector Database
VECTOR_DB=local_chroma
VECTOR_DB_PATH=./data/vectordb

# Embeddings / testing flags
USE_MOCK_EMBEDDINGS=true

# Clinic Configuration
CLINIC_NAME=HealthCare Plus Clinic
CLINIC_PHONE=+1-555-123-4567
TIMEZONE=America/New_York

# Application
BACKEND_PORT=8000
FRONTEND_PORT=5173
